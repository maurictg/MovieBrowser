<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="General Settings">
        <EditTextPreference
            app:key="username"
            app:title="Username"
            app:useSimpleSummaryProvider="true"
            android:defaultValue="@string/username"
            android:icon="@drawable/ic_account_circle_24dp" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Preferences">
        <SwitchPreferenceCompat
            app:title="Theme"
            app:key="theme"
            android:defaultValue="true"
            android:summaryOn="Dark theme"
            android:summaryOff="Light theme"
            android:icon="@drawable/ic_whatshot_24dp" />

        <ListPreference
            app:entries="@array/languages"
            app:entryValues="@array/language_values"
            app:key="lang"
            app:title="Language"
            android:defaultValue="English"
            android:dialogTitle=""
            android:icon="@drawable/ic_chat_24dp"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>

</PreferenceScreen>

